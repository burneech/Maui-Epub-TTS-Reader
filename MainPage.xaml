<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEpubTTSReader.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20,20"
                             Spacing="20">
            <Label Text="Select your .epub file:"
                   FontSize="Small"/>
            <Button Text="Browse"
                    HorizontalOptions="Fill" />
            <Label Text="No file selected" FontSize="Micro" />
            
            <Label Text="Find the text you want to start reading from:"
                   FontSize="Small"/>
            <Entry Placeholder="Leave empty to start from the beginning"/>
            <Button Text="Find"
                    HorizontalOptions="Fill" />

            <Label Text="Select the correct text:"
                   FontSize="Small"/>
            <VerticalStackLayout MaximumHeightRequest="100">
                <Label>First</Label>
                <Label>Second</Label>
                <Label>Third</Label>
            </VerticalStackLayout>
            
            <Label Text="Start reading the text:"
                   FontSize="Small"/>
            <Button Text="Read"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
