<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:MauiEpubTTSReader"
             x:Class="MauiEpubTTSReader.MainPage">
    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20,20"
                             Spacing="50">
            <!--Selecting EPUB-->
            <VerticalStackLayout Spacing="10">
                <Label Text="Select your .epub file:"
                       FontSize="Small"/>
                <Button Text="Browse"
                        HorizontalOptions="Fill"
                        Command="{Binding BrowseEpubFileCommand}"/>
                <Label Text="{Binding EpubStateDisplayMessage}"
                       IsVisible="{Binding EpubStateDisplayMessage,
                                           Converter={StaticResource IsStringNotNullOrEmptyConverter}}"
                       FontSize="Micro" />
            </VerticalStackLayout>

            <!--Searching text-->
            <VerticalStackLayout IsVisible="{Binding IsTextSearchVisible}"
                                 Spacing="10">
                <Label Text="Find the text you want to start reading from:"
                       FontSize="Small"/>
                <Entry Placeholder="Leave empty to start from the beginning"
                       Text="{Binding TextToFind}"/>
                <Button Text="Find"
                        HorizontalOptions="Fill"
                        Command="{Binding FindTextCommand}"/>
                <Label Text="{Binding SearchStateDisplayMessage}"
                       IsVisible="{Binding SearchStateDisplayMessage,
                                           Converter={StaticResource IsStringNotNullOrEmptyConverter}}"
                       FontSize="Micro" />
            </VerticalStackLayout>

            <!--Selecting correct text if multiple occurrences found-->
            <VerticalStackLayout IsVisible="{Binding IsMultipleSubstringSelectionVisible}"
                                 Spacing="10">
                <Label Text="Select the correct text:"
                       FontSize="Small"/>
                <Picker ItemsSource="{Binding LocatedSubstringOccurrences}"
                        SelectedItem="{Binding SelectedSubstringOccurrence}"
                        ItemDisplayBinding="{Binding SubstringPreview}"
                        HorizontalOptions="Fill"/>
            </VerticalStackLayout>

            <!--Reading text-->
            <VerticalStackLayout IsVisible="{Binding IsTextReadingVisible}"
                                 Spacing="10">
                <Label Text="Start reading the text:"
                       FontSize="Small"/>
                <Button Text="Read"
                        Command="{Binding StartTextToSpeechCommand}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
